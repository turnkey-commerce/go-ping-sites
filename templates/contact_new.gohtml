<!DOCTYPE html>
<html lang="en">
<head>
  {{template "_head.gohtml" .Title}}
  <style type="text/css">.error {color: red;}</style>
</head>
<body role="document">
  {{template "_nav.gohtml" .Nav}}
  <div class="container">
    <div class="row">
      <div class="col-md-5 col-md-offset-3">
        <h1>Settings</h1>
        <h2>Add New Contact</h2>
        <form action="" method="post" id="new_contact">
          {{template "_contact_edit_form.gohtml" .}}
          <!-- List sites that can be assigned to the new contact -->
          <div class="form-group">
            <label for="assignedContacts">Assign Contact to Sites</label>
            <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th class="col-md-1 text-center">Assign?</th>
                  <th class="col-md-2">Site</th>
                  <th class="col-md-1 text-center">Active?</th>
                  <th class="col-md-3">URL</th>
                </tr>
              </thead>
              <tbody>
                {{range .AllSites}}
                  <tr>
                    <td class="text-center"><input type="checkbox" name="selectedSites" id="selectedSites" value="{{.SiteID}}" {{if .IsAssigned}}checked{{end}}></td>
                    <td>{{.Name}}</td>
                    <td class="text-center">{{.IsActive | displayBool}}</td>
                    <td>{{.URL}}</td>
                  </tr>
                {{end}}
              </tbody>
            </table>
            </div>
          </div>
          <button type="submit" class="btn btn-primary ladda-button" data-style="expand-left"><span class="ladda-label">Submit New Contact</span></button>
          &nbsp;&nbsp;<button type="button" class="btn btn-secondary" onclick="window.location.href='/settings/contacts'; return false;" >Cancel</button>
        </form>
      </div>
    </div>
  </div>
  {{template "_footer.gohtml"}}
  {{template "_footer_submit.gohtml"}}
</body>
</html>
