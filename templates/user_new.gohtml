<!DOCTYPE html>
<html lang="en">
<head>
  {{template "_head.gohtml" .Title}}
  <style type="text/css">.error {color: red;}</style>
</head>
<body role="document">
  {{template "_nav.gohtml" .Nav}}
  <div class="container">
    <div class="row">
      <div class="col-md-5 col-md-offset-3">
        <h1>Settings</h1>
        <h2>Add New User</h2>
        <form action="" method="post" id="new_user">
          <div class="form-group">
            <label for="username">Username</label>
            <input type="text"  class="form-control" name="username" id="username" value="{{.User.Username}}">
            {{ with .Errors.Username }}
              <div class="error">{{ . }}</div>
            {{ end }}
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" name="password" id="password" value="{{.User.Password}}">
            {{ with .Errors.Password }}
              <div class="error">{{ . }}</div>
            {{ end }}
          </div>
          <div class="form-group">
            <label for="password">Repeat Password</label>
            <input type="password" class="form-control" name="password2" id="password2" value="{{.User.Password2}}">
            {{ with .Errors.Password2 }}
              <div class="error">{{ . }}</div>
            {{ end }}
          </div>
          <div class="form-group">
            <label for="Email">Email</label>
            <input type="email" class="form-control" name="email" id="email" value="{{.User.Email}}">
            {{ with .Errors.Email }}
              <div class="error">{{ . }}</div>
            {{ end }}
          </div>
          <div class="form-group">
            <label for="Role">Role</label>
            {{ $role := .User.Role}}
            <select name="role" id="role" class="form-control">
              <option value=""{{if eq $role ""}} selected{{end}}>No role</option>
              {{ range $key, $val := .Roles }}<option value="{{ $key }}"{{ if eq $role $key }} selected{{ end }}>{{$key}}</option>{{ end }}
            </select>
            {{ with .Errors.Role }}
              <div class="error">{{ . }}</div>
            {{ end }}
          </div>
          <button type="submit" class="btn btn-primary ladda-button" data-style="expand-left"><span class="ladda-label">Submit New User</span></button>
          &nbsp;&nbsp;<button type="button" class="btn btn-secondary" onclick="window.location.href='/settings/users'; return false;" >Cancel</button>
          {{ .CsrfField }}
        </form>
      </div>
    </div>
  </div>
  {{template "_footer.gohtml"}}
  {{template "_footer_submit.gohtml"}}
</body>
</html>
